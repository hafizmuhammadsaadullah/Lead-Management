<div class="row bg-white mx-4">
  <div class="col-sm-12 text-center px-3">
    <h1>Users</h1>
  </div>
  <div class="col-sm-12 text-left m-3">
    <%=user_create_button%>
  </div>
  <div class="col-sm-12 ">
    <table class="table mx-auto">
      <thead>
        <tr class="p4">
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">User Name</th>
          <th scope="col">Email</th>
          <th scope="col">Contact</th>
        </tr>
      </thead>
      <tbody>
        <% @user.each do |user| %>
        <tr>
          <td scope="row"><%= user.first_name %></td>
          <td scope="row"><%= user.last_name %></td>
          <td scope="row"><%= user.user_name %></td>
          <td><%= user.email %></td>
          <td><%= user.contact_no %></td>
          <td>
            <%=user_edit_button(user)%>
            <%= link_to 'Show', user_path(user), method: :GET, class: "btn btn-info" %>
            <%=user_delete_button(user)%>
            <%=user_role_button(user)%>

           </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
