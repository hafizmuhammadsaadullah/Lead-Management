<div class="content">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header card-header-primary">
          <h4 class="card-title">Edit Profile</h4>
          <p class="card-category">Complete your profile</p>
        </div>
        <div class="card-body">
         <%= form_with(model: @user,local: true, url: user_path(@user.id), :method => "patch") do |f| %>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                <%= f.label :user_name, class: "bmd-label-floating" %>
                <%= f.text_field :user_name, class: "form-control", required: true %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <%= f.label :email, class: "bmd-label-floating" %>
                  <%= f.email_field :email, class: "form-control", required: true %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                <%= f.label :contact_no,'Contact No', class: "bmd-label-floating" %>
                <%= f.text_field :contact_no, class: "form-control", required: true %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                <%= f.label :first_name,'First Name', class: "bmd-label-floating" %>
                <%= f.text_field :first_name, class: "form-control", required: true %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                <%= f.label :last_name, class: "bmd-label-floating" %>
                <%= f.text_field :last_name, class: "form-control", required: true %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <%= f.label :image, class: "bmd-label-floatin" %><br />
                <%= f.file_field :image, class: "form-control",accept: "image/*" %>
              </div>
              <div class="col-md-8">
                <div class="form-group">
                <%= f.label :address, class: "bmd-label-floating", rows: "3" %>
                <%= f.text_area :address, class: "form-control"%>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :about,'about me', class: "bmd-label-floating" %>
                  <%= f.text_field :about, class: "form-control", rows: "3" %>
                </div>
              </div>
            </div>
            <%= f.submit  "Update Profile", class: "btn btn-primary btn-md"  %>
            <div class="clearfix"></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
