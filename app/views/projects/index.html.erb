<div class="row bg-white mx-4">
  <div class="col-sm-12 text-center px-3">
    <h1>Projects</h1>
  </div>
  <div class="col-sm-12">
    <table class="table mx-auto">
      <thead>
        <tr class="p4">
          <th scope="col">Project Name</th>
          <th scope="col">Client Name</th>
          <th scope="col">Client Email</th>
          <th scope="col">Client Address</th>
          <th scope="col">Client Contact</th>
          <th scope="col">Assign To</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @project.each do |project| %>
          <tr>
            <td scope="row"><%= project.name %></td>
            <td><%= project.lead.client_name %></td>
            <td scope="row"><%= project.lead.client_email %></td>
            <td><%= project.lead.client_address %></td>
            <td><%= project.lead.client_contact %></td>
            <td><%= project.user.user_name unless project.user_id.nil?%></td>
            <td>
              <%=project_edit_button(project)%>
              <%=link_to 'Show', project_path(project), class: "btn btn-info" %>
              <%=project_delete_button(project) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
