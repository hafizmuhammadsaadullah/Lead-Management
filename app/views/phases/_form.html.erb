<%= f.label :name,'Phase Name', class: "text-info my-1" %>
<%= f.text_field :name, class: "form-control", required: true  %>
<%= f.label :phaseType,'Phase Type', class: "text-info my-1" %>
<%= f.select :phaseType, ['Interview', 'Test Project'], {include_blank: 'Select Lead Type'}, required: true, class: "form-control"  %>
<%= f.label :description, class: "text-info my-1" %>
<%= f.text_area :description, class: "form-control", required: true %>
<%= f.label :start_date, class: "text-info my-1" %>
<%= f.datetime_local_field :start_date, class: "form-control", required: true %>
<%= f.label :due_date, class: "text-info my-1" %>
<%= f.datetime_local_field :due_date, class: "form-control", required: true %>
<%= f.submit  "Submit", class: "btn btn-info btn-md"  %>