<div class="sidebar" data-color="purple" data-background-color="white" data-image=<%= asset_path('sidebar-1.jpg') %>>
  <!--
    Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

    Tip 2: you can also add an image using data-image tag
-->
  <div class="logo">
    <a href="http://www.creative-tim.com" class="simple-text logo-normal">
      Creative Tim
    </a>
  </div>
  <div class="sidebar-wrapper">
    <ul class="nav">
      <li class="nav-item <% if controller.controller_name == "home" %>active<%end%> ">
          <%= link_to root_path, class: 'nav-link' do %>
          <i class="material-icons">dashboard</i>
          <p>Dashboard</p>
        <% end %>
      </li>
      <li class="nav-item <% if controller.controller_name == "users" || controller.controller_name == "user_roles" %>active<%end%>">
        <%= link_to users_path, class: 'nav-link' do %>
          <i class="material-icons">person</i>
          <p>User Profile</p>
        <% end %>
      </li>
      <li class="nav-item <% if controller.controller_name == "leads" || controller.controller_name == "phases" || controller.controller_name == "phase_users" || controller.controller_name == "requests" %>active<%end%>">
        <%= link_to leads_path, class: 'nav-link' do %>
          <i class="material-icons">content_paste</i>
          <p>Leads</p>
        <% end %>
      </li>
      <li class="nav-item <% if controller.controller_name == "roles" %>active<%end%> ">
        <%= link_to roles_path, class: 'nav-link' do %>
          <i class="material-icons">library_books</i>
          <p>Roles</p>
        <% end %>
      </li>
    </ul>
  </div>
</div>
