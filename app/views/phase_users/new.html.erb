<div class="row justify-content-center bg-white mx-4">
  <%= form_with(model: @phase_user, local: true, url: phase_phase_users_path(@phase.id), :method => "post", class: "form col-sm-6 ") do |f| %>
    <h3 class="text-center text-info">Add engineer</h3>
    <%= render 'error', phase_user: @phase_user %>
    <%= f.label :phase_id,'Phase Name', class: "text-info my-1" %>
    <%= f.text_field :phase_id,value:@phase.name, class: "form-control",:disabled => true%>
    <%= f.label :user_id,'Engineer Name', class: "text-info my-1" %>
    <%= f.select :user_id,@user.map {|u| [u.user_name, u.id]},{include_blank: 'Select Engineer'}, { class: "form-control" } %>
    <%= f.label :description, class: "text-info my-1" %>
    <%= f.text_area :description, class: "form-control" %>
    <%= f.submit  "Submit", class: "btn btn-info btn-md"  %>
  <% end %>
</div>
