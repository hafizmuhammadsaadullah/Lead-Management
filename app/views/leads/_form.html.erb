<%= render 'error', lead: @lead %>
<%= f.label :name,'Lead Name', class: "text-info my-1" %>
<%= f.text_field :name, class: "form-control", required: true %>
<%= f.label :client_name, class: "text-info my-1" %>
<%= f.text_field :client_name, class: "form-control", required: true %>
<%= f.label :client_email, class: "text-info my-1" %>
<%= f.email_field :client_email, class: "form-control", required: true %>
<%= f.label :client_contact, class: "text-info my-1" %>
<%= f.text_field :client_contact, class: "form-control", required: true%>
<%= f.label :client_address, class: "text-info my-1" %>
<%= f.text_area :client_address, class: "form-control", required: true %>
<%= f.label :leadType,'Lead Type', class: "text-info my-1" %>
<%= f.select :leadType, ['Interview', 'Test Project'], {include_blank: 'Select Lead Type'}, required: true, class: "form-control"  %>
<%= f.submit  "Submit", class: "btn btn-info btn-md"  %>