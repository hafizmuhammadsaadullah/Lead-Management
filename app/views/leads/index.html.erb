<div class="row bg-white mx-4">
  <div class="col-sm-12 text-center px-3">
    <h1>Leads</h1>
  </div>
  <div class="col-sm-12 text-left m-3">
    <%= lead_create_button(@lead)%>
  </div>
  <div class="col-sm-12 ">
    <table class="table mx-auto">
      <thead>
        <tr class="p4">
          <th scope="col">Lead Name</th>
          <th scope="col">Client Name</th>
          <th scope="col">Client Email</th>
          <th scope="col">Client Address</th>
          <th scope="col">Client Contact</th>
          <th scope="col">Test Type</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @lead.each do |lead| %>
          <tr>
            <td scope="row"><%= lead.name %></td>
            <td><%= lead.client_name %></td>
            <td scope="row"><%= lead.client_email %></td>
            <td><%= lead.client_address %></td>
            <td><%= lead.client_contact %></td>
            <td><%= lead.leadType %></td>
            <td>
              <%=lead_edit_button(lead)%>
              <%=link_to 'Show', lead_path(lead), class: "btn btn-info" %>
              <%=lead_delete_button(lead)%>
              <%=lead_status_change_button(lead) %>
              <%= link_to 'Phase', lead_phases_path(lead), class: "btn btn-info" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
