<div class="row justify-content-center bg-white mx-4">
  <%= form_with(model: @role, url: user_roles_path(@user.id), :method => "post", class: "form col-sm-6 ") do |f| %>
    <h3 class="text-center text-info">Add Role</h3>
    <%= f.select :role,@roles.map {|r| [r.name, r.id]},{include_blank: 'Select Role'}, required: true, class: "form-control"%>
    <%= f.submit  "Submit", class: "btn btn-info btn-md"  %>
  <% end %>
</div>
